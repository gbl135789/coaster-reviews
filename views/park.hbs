
<h2>{{park.name}}</h2>

<h3>Rating: {{park.rating}}</h3>

{{#if errorMessage}}
    <div class="alert alert-danger">{{errorMessage}}</div>
{{/if}}

{{#if successMessage}}
    <div>{{successMessage}}</div>
{{/if}}

{{#if isAdmin}}
    {{!-- <a href="/{{park.slug}}/add-coaster">Add coaster</a> --}}
    <form method="POST" action="/{{park.slug}}/add-coaster">
        <h3>Add a coaster</h3>
        <label for="name">Name</label><br>
        <input id="name" name="name" type="text" required><br>
        <input type="submit" value="Add coaster">
    </form>
{{/if}}

<ul>
    {{#each park.coasters}}
        <li>
            <a href="/{{../park.slug}}/{{slug}}">{{name}}</a> Rating: {{rating}}
        </li>
    {{else}}
        <li>No coasters to display.</li>
    {{/each}}
</ul>